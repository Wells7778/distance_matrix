<h1 class="text-danger"><%= @distance.address %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Tag</th>
      <th>No</th>
      <th>Name</th>
      <th>M</th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <% if list['tag'] == "優" %>
          <td class="text-danger"><%= list['tag'] %></td>
          <td class="text-danger"><%= list['no'] %></td>
          <td class="text-danger"><%= list['name'] %></td>
          <td class="text-danger"><%= list['distance'] / 1000 %>公里</td>
        <% else %>
          <td><%= list['tag'] %></td>
          <td><%= list['no'] %></td>
          <td><%= list['name'] %></td>
          <td><%= list['distance'] / 1000 %>公里</td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>