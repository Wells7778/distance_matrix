<div class="container">
  <h2 class="mb-1 mt-3 text-center">登入</h2>
  <p class="text-center text-muted mb-5">後台使用</p>
  <div class="row">
    <div class="col-xs-12 col-sm-6 offset-sm-3 border border-light rounded p-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group mb-3 ">
          <%= f.label :email, "E-mail" %>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password, "密碼" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "記住我" %>
          </div>
        <% end -%>

        <div class="form-group mb-3">
          <%= f.submit "登入", class: "btn btn-primary btn-lg w-100" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
